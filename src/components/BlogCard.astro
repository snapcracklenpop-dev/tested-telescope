---
const { title, url, pubDate, description } = Astro.props;
import "../styles/global.css";
---

<!-- Dynamically load post title, date and subtile into card... -->
<li>
  <a href={url}>
    <div class="card">
      <h2>{title}</h2>
      <p>{pubDate}</p>
      <p>{description}</p>
    </div>
  </a>
</li>

<!-- styles  -->
<style>
  
  a {
    text-decoration: none;
    color: var(--eerie-black);
  }
  a:hover{
    text-decoration: none;
  }
  .card {
    border-radius: 6px;
    background-color: var(--eerie-black-card);
    color: var(--eggshell);

    transition: 0.4s;
    margin: 2rem;
    padding: 1rem 2rem;
  }
  .card:hover {
    background-color: var(--eerie-black-card-hover);
    padding-left: 2.5rem;
    
  }
</style>
