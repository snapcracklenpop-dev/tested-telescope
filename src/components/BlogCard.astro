---
const { title, url, pubDate, description } = Astro.props;
---

<!-- Dynamically load post title, date and subtile into card... -->
<li>
  <a href={url}>
    <div class="card">
      <h2>{title}</h2>
      <p>{pubDate}</p>
      <p>{description}</p>
    </div>
  </a>
</li>

<!-- styles  -->
<style>
  li{list-style: none;}
  a {
    text-decoration: none;
    color: white;
  }

  .card {
    border-radius: 6px;
    background-color: #141212;
    transition: 0.4s;
    margin-top: 20px;
    padding: 10px 20px;
  }
  .card:hover {
    background-color: #040303;
    padding-left: 30px;
  }
</style>
